@model IEnumerable<Lecturer>

<div class="container mt-5">
    <h2>Manage Lecturers</h2>
    <a class="btn btn-primary mb-3" asp-action="CreateLecturer">Add Lecturer</a>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lecturer in Model)
            {
                <tr>
                    <td>@lecturer.FirstName</td>
                    <td>@lecturer.LastName</td>
                    <td>@lecturer.Email</td>
                    <td>@lecturer.PhoneNumber</td>
                    <td>
                        <a class="btn btn-sm btn-success" asp-action="EditLecturer" asp-route-id="@lecturer.LecturerId">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@lecturer.LecturerId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

