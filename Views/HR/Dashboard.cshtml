@model List<Contract_Monthly_Claim_System.Models.Claim>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <h2>Approved Claims</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Lecturer Name</th>
                <th>Claim Amount</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Submission Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.lecturerName</td>
                        <td>@claim.claimAmount.ToString("C")</td>
                        <td>@claim.hoursWorked</td>
                        <td>@claim.hourlyRate.ToString("C")</td>
                        <td>@claim.submissionDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a asp-action="GenerateInvoice" asp-route-claimId="@claim.ClaimId" class="btn btn-primary btn-sm">
                                Generate Invoice
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No approved claims found.</td>
                </tr>
            }
        </tbody>
    </table>
    <nav class="nav flex-column">
        <a class="nav-link" href="@Url.Action("Lecturer", "HR")">View Lecturers</a> <!-- Link to view the lecturers -->
       
    </nav>
</div>

