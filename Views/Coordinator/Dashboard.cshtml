@model List<Contract_Monthly_Claim_System.Models.Claim>


@{
    ViewData["Title"] = "Claim Verification Dashboard";
}

<div class="container mt-5">
    <div class="text-center">
        <h2 class="text-center" style="color:darkolivegreen;">Claim Verification Dashboard</h2>
        <p class="lead">Review and manage pending claims from lecturers</p>
    </div>

    
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-#C1E1C1-500 text-white">
            <h5>Pending Claims</h5>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead class="thread-light">
                    <tr>
                        <th>Lecturer Name</th>
                        <th>Claim Amount</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.lecturerName</td>
                            <td>@claim.claimAmount.ToString("C")</td> <!-- Format the claim amount as currency -->
                            <td>@claim.submissionDate.ToString("yyyy-MM-dd")</td> <!-- Format the date -->
                            <td>
                                <!-- Approve Button -->
                                <form asp-action="ApproveClaim" method="post" style="display:inline;">
                                    <input type="hidden" name="claimId" value="@claim.ClaimId" />
                                    <button type="submit" class="btn btn-success btn-sm">
                                        <i class="fas fa-check"></i> Approve
                                    </button>
                                </form>

                                <!-- Reject Button -->
                                <form asp-action="RejectClaim" method="post" style="display:inline;">
                                    <input type="hidden" name="claimId" value="@claim.ClaimId" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-times"></i> Reject
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                   
                </tbody>
            </table>
        </div>
    </div>
</div>




<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

