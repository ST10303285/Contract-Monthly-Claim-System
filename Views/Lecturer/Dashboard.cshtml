@{
    ViewBag.Title = "Lecturer Dashboard";
}

<div class="text-center my-5">
    <h2>Lecturer Dashboard</h2>
    <p class="lead">Manage your claims and track their status</p>
</div>

<!-- Buttons Section -->
<div class="row justify-content-center mb-5">
    <div class="col-md-3">
        <a href="#" class="btn btn-success btn-block btn-lg">
            <i class="fas fa-file-upload"></i> Submit New Claim
        </a>
    </div>
    <div class="col-md-3">
        <a href="#" class="btn btn-primary btn-block btn-lg">
            <i class="fas fa-upload"></i> Upload Documents
        </a>
    </div>
</div>

<!-- Claim Status Tracker -->
<div class="card">
    <div class="card-header bg-info text-white">
        Claim Status Tracker
    </div>
    <div class="card-body">
        <ul class="list-group">
            <!-- Example of a Pending Claim -->
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Claim #1: 10 hours worked
                <span class="badge badge-warning badge-pill">Pending</span>
            </li>
            <!-- Example of an Approved Claim -->
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Claim #2: 8 hours worked
                <span class="badge badge-success badge-pill">Approved</span>
            </li>
            <!-- Example of a Rejected Claim -->
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Claim #3: 12 hours worked
                <span class="badge badge-danger badge-pill">Rejected</span>
            </li>
        </ul>
    </div>
</div>
