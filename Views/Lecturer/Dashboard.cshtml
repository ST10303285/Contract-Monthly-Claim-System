@model List<Contract_Monthly_Claim_System.Models.Claim>

@{
    ViewBag.Title = "Lecturer Dashboard";
}

<div class="text-center my-5">
    <h2>Lecturer Dashboard</h2>
    <p class="lead">Manage your claims and track their status</p>
</div>


<div class="row justify-content-center mb-5">
    <div class="col-md-3">
        <a href="@Url.Action("SubmitClaim","Lecturer")" class="btn btn-success btn-block btn-lg">
            <i class="fas fa-file-upload"></i> Submit New Claim
        </a>
    </div>
    <div class="col-md-3">
        <a href="#" class="btn btn-center btn-block btn-lg">
            <i class="fas fa-upload"></i> Upload Documents
        </a>
    </div>
</div>


<div class="container mt-5">
    <div class="text-center">
        <h2 class="text-center" style="color:darkolivegreen;">Claim Status Tracker</h2>
        <p class="lead">View the status of your submitted claims</p>
    </div>

    <div class="card shadow-sm mb-5">
        <div class="card-header bg-#C1E1C1-500 text-white">
            <h5>Claim Status Tracker</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Claim ID</th>
                            <th scope="col">Hours Worked</th>
                            <th scope="col">Claim Amount</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>Claim #@claim.ClaimId</td>
                                <td>@claim.hoursWorked hours</td>
                                <td>@claim.claimAmount.ToString("C2")</td>
                                <td>
                                    <span class="badge
                                        @(claim.status == "Approved" ? "badge-success text-green" :
                                          claim.status == "Rejected" ? "badge-danger text-red" : "badge-warning text-brown")">
                                        @claim.status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
