@{
    ViewData["Title"] = "Home - Contract Monthly Claim System";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Welcome to the Contract Monthly Claim System</h1>
        <p class="lead">Please select your role to access the appropriate dashboard</p>
    </div>

    <!-- Navigation Section -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Lecturer Dashboard</h5>
                    <p class="card-text">Submit claims and track their status</p>
                    <a href="@Url.Action("Dashboard", "Lecturer")" class="btn btn-primary btn-lg">
                        <i class="fas fa-chalkboard-teacher"></i> Go to Lecturer Dashboard
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Programme Coordinator & Academic Manager Dashboard</h5>
                    <p class="card-text">Review and verify submitted claims</p>
                    <a href="@Url.Action("Dashboard", "Coordinator")" class="btn btn-info btn-lg">
                        <i class="fas fa-tasks"></i> Go to Claim Verification Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- FontAwesome Icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
