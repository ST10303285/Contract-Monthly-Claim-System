@{
    ViewData["Title"] = "Home - Contract Monthly Claim System";
}

<div class="container mt-5">
    <!-- Header Section -->
    <div class="text-center">
        <h1 class="display-4">Welcome to the Contract Monthly Claim System</h1>
        <p class="lead" style="color: #4B5320;">An efficient solution for claim submission, approval, and processing.</p>
    </div>

    <!-- System Overview Section -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-8 text-center">
            <p style="font-size: 1.2rem; color: #333;">The Contract Monthly Claim System simplifies the process of submitting and managing claims for lecturers, coordinators, and HR personnel. It automates claim calculations, provides an approval workflow, and generates professional invoices. This system aims to reduce administrative workload, enhance accuracy, and improve efficiency.</p>
        </div>
    </div>

    <!-- Key Features Section -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <h3>Key Features</h3>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">💡 <strong>Automatic Claim Calculation</strong> - Automatically calculates claim amounts based on lecturer hours and hourly rates.</li>
                <li class="list-group-item">✔️ <strong>Approval Workflow</strong> - Streamlines the approval process for programme coordinators and HR personnel.</li>
                <li class="list-group-item">📄 <strong>Invoice Generation</strong> - Generates professional invoices for each claim that can be downloaded.</li>
                <li class="list-group-item">🔒 <strong>Role-Based Access</strong> - Personalized dashboards for lecturers, coordinators, and HR based on user roles.</li>
            </ul>
        </div>
    </div>


    <!-- Call to Action Section -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-6 text-center">
            <a href="@Url.Action("Login", "Account")" class="btn btn-success btn-lg">
                Get Started
            </a>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
